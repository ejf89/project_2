<div class="container" align="center">

    <div class="row">
        <div class="col m12">
            <div class="card">
                <!-- <div class="card-image"> -->
                <div class="responsive-img">
                    <!-- class="responsive-img"  -->
                <%= image_tag(@picture.image_url) %>
                    <div class="card-content">
                        <%= @picture.title %>
                    </div>
                </div>
            </div>
        </div>
    </div>







    <%= flash[:notice] %>

    <% @comments.each do |comment| %>
    <p><%= link_to comment.user.username, user_path(comment.user.id) %>: <%= comment.content %></p>
    <% end %>

        <% @picture.tags.each do |tag| %>
            #<%=link_to tag.name, tag_path(tag) %>
        <% end %>
    <br>
    <br>
    add a comment:
    <%= form_for @comment do |f| %>
    <%= f.text_area :content %> <br>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :picture_id, :value => @picture.id %>
    <%=f.submit "Add Comment", {:controller => 'comments', :action => 'create', :method => 'post', 'picture_id' => @picture.id} %>
    <% end %>

    <% if current_user.id == @user.id %>
        <%= button_to 'delete photo', user_picture_path(@picture), method: :delete %>
    <% end %>
</div>
